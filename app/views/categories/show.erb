
<br>
<h1 align="center"> <%= @category.name %> </h1>



<body>

<div class="card">
  <div class="card-body">
    <div class="item-info">
      <ul class="list" style="list-style: none;">

      <% @category.items.all.each do |item| %>
        <li>
          <img class="item-image-container" src=<%= "#{item.image_path}"%> /> <br>
          <%= link_to "#{item.style.capitalize}", item_path(item) %> <br>
          <%= "#{item.size.capitalize}" %> &nbsp; <%= "#{item.color.capitalize}" %> <br>
          <%= "#{item.price}" %></li> <br>
      <% end %>

      </ul>
    </div>
  </div>
</div>
<button> <%= link_to "Shop All", items_path %> </button>
</body>


