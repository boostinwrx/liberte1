<% if @customer.errors.any? %>
  <div id="error_explanation">
    <h4>
      <%= pluralize(@customer.errors.count, "error") %>
      prohibited this article from being saved:
    </h4>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    <% end %>
</div>
