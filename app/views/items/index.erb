

<body>

<div class="card">
  <div class="card-body">
    <div class="item-info">
      <ul class="list" style="list-style: none;">

        <% @items.all.each do |item| %>
          <li>
            <img class="item-image-container" src="/assets/bags/BoxBagBlack01.jpeg" /> <br>
            <%= link_to "#{item.style.capitalize}", item_path(item) %> <br>
            <%= "#{item.size.capitalize}" %> &nbsp; <%= "#{item.color.capitalize}" %> <br>
            <%= "#{item.price}" %></li> <br>
        <% end %>

      </ul>
    </div>
  </div>
</div>
