<header>
  <div class="image-container">
    <img class="image-logo" src="/assets/logo.jpeg" />
  </div>
  <div class="custom-padding">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav navigation-list">
          <li class="nav-item category-item"><a href="/categories">Home</a></li>
          <li class="nav-item category-item"><a href="/categories/1">Bag</a></li>
          <li class="nav-item category-item"><a href="/categories/2">Wallet</a></li>
          <li class="nav-item category-item"><a href="/categories/3">Sunglasses</a></li>
          <li class="nav-item category-item"><a href="/items">Shop All</a></li>
          <li class="nav-item category-item"><a href="/customers">Customers</a></li>

        </ul>
      </div>
    </nav>
  </div>
</header>

  <body>
    <h1> <%= @item.style %></h1>


    <div class="card">
      <div class="card-body">
        <img class="item-image-container" src="/assets/bags/BucketBag01" />
        <div class="item-info">
          Size: <%= @item.size %> &nbsp; Color: <%= @item.color %>  <br>
          Price: <%= @item.price %>
        </div>
      </div>
    </div>

    <br>
    <br>

    <h4> Create a Review </h4>
    <%= render partial: 'reviews/new' %>

    <br>
  </body>
  <button> <%= link_to "Home", categories_path %></button>
  <button> <%= link_to "Shop All", items_path %></button>

  <br> <br>
  <h4> Reviews for This Bag</h4>
  <br>
      <ul>
        <% @item.reviews.each do |review| %>
          <li> &nbsp; <%= review.rating %> &nbsp; | &nbsp; <%= review.content %></li>
          <button> <%= link_to "Edit Review", edit_review_path(review) %></button>
          <button> <%= link_to "Delete Review", review_path(review), method: "delete" %> </button> <br>
          <% end %>

      </ul>

</html>

