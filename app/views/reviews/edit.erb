
<!--to display messages for validation-->
<% if @review.errors.any? %>

  <% @review.errors.full_messages.each do |msg| %>

    <%= msg %>
  <% end %>

<% end %> <br>
<!--for starts here-->
<%= form_for @review do |r| %>
    <%= r.label :rating %> &nbsp;
    <%= r.select :rating, 1..10 %> <br>

    <br>

    <%= r.label :content %> &nbsp;<br>
    <%= r.text_area :content %> <br>


  <%= r.submit %>
<% end %>